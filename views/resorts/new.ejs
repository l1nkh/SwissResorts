<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">New Resort</h1>
    <div class="col-6 offset-3">
        <form action="/Resorts" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="Resort[title]" required>
                <div class="valid-feedback">Looks good !</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="Resort[location]" required>
                <div class="valid-feedback">Looks good !</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="Resort[image]" required>
                <div class="valid-feedback">Looks good !</div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Resort Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">â‚¬</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="Resort[price]" required>
                    <div class="valid-feedback">Looks good !</div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="Resort[description]" required></textarea>
                <div class="valid-feedback">Looks good !</div>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Resort</button>
            </div>
        </form>
        <a href="/Resorts">All Resorts</a>
    </div>
</div>