<% layout('layouts/boilerplate') %>
<div id="map" class="cluster-map"></div>
<h1>All Resorts</h1>
<% for (let resort of resorts){%>
<div class="card mb-3 border-0 rounded shadow">
    <div class="row">
        <div class="col-md-4">
            <%if(resort.images.length) {%>
                <img class="img-fluid border-0 resort-card" alt="" src="<%=resort.images[0].url%>">
                <% }else {%>
                <img class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dpy1uef7w/image/upload/v1698446154/SwissResorts/kelnqlzdkrdhnvuuix7q.jpg">
                <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"> <%= resort.title %> </h5>
                <p class="card-text"> <%= resort.description %> </p>
                <p class="card-text">
                    <small class="text-black-50"> <%= resort.location %> </small> 
                </p>
                <a class="btn btn-primary" href="/resorts/<%=resort._id%>">View <%=resort.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const resorts = { features: <%- JSON.stringify(resorts) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>